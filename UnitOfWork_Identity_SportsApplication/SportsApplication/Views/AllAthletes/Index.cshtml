@model IEnumerable<SportsApplication.Data.Entity.AllAthleteList>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>

</head>
<body>
    <div class="text-center">
        <h3>All Athletes List</h3>
        <hr/>
        <div class="row" style="margin-top:30px">
            <div class="col"><b>Athlete Name</b></div>
            <div class="col"></div>
        </div>
        <hr />
        <ol>
            @foreach (var item in Model)
            {
            <li>
                <div class="row">
                    <div class="col">
                        @Html.DisplayFor(modelItem => item.athlete_name)
                    </div>
                    <div class="col"><a asp-action="Delete" asp-route-id="@item.id">Delete</a></div>
                </div>
                <hr />
            </li>
            }
            </ol>
            <div>
                <a asp-action="Create" class="btn btn-primary">Create New Athlete</a>
            </div>
            <div>
                <a style="margin-top:30px" value="submit" asp-controller="TestLists">Back To Test List</a>
            </div>
</div>
    
</body>
</html>

