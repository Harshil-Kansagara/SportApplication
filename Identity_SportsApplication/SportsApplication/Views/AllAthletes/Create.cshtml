@model SportsApplication.Data.Entity.AllAthleteList

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Create New Athlete</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label"><b>Athlete Name:</b></label>
                <input asp-for="athlete_name" class="form-control" />
                <span asp-validation-for="athlete_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@if (ViewBag.message != null)
{
    <div class="text-danger">@ViewBag.message</div>
}
<div>
    <a asp-action="Index">Back to List</a>
</div>

